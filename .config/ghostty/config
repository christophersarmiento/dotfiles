# Shell
shell-integration = detect
shell-integration-features = "no-cursor, title"
command = /opt/homebrew/bin/fish

# Clipboard
clipboard-read = allow
clipboard-write = allow

# Fonts
font-size = 16
font-thicken = true
font-thicken-strength = 1
font-family = "MonaspiceNe NerdFond Mono"
font-style-bold = false
font-feature = "-calt, -liga, -dlig"

# Colors
theme = "light:Catppuccin Latte,dark : Catppuccin Mocha"

# Cursor
cursor-style = underline
cursor-click-to-move = true

# Advanced
adjust-cursor-thickness = 1

# Macos
macos-titlebar-style = tabs
macos-icon = custom-style
macos-icon-frame = plastic
macos-icon-ghost-color = #11BA22
macos-icon-screen-color = #030003
auto-update = check

# Window
window-colorspace = display-p3
window-height = 61
window-width = 113
window-padding-x = 5
window-save-state = always

# Keybinds
keybind = global:cmd+;=toggle_quick_terminal

# Window splits
keybind = ctrl+h=goto_split:left
keybind = ctrl+j=goto_split:bottom
keybind = ctrl+k=goto_split:top
keybind = ctrl+l=goto_split:right

keybind = ctrl+a>h=new_split:left
keybind = ctrl+a>j=new_split:down
keybind = ctrl+a>k=new_split:up
keybind = ctrl+a>l=new_split:right
keybind = ctrl+a>f=toggle_split_zoom
